@page
@model WeekTwo.Pages.timeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    ViewData["Title"] = "Time";
}

<!DOCTYPE html>
<html>
<head>

    <title> </title>
</head>
<body>
    <h1>Time</h1>

    <form method="post">
        <fieldset>

           <legend>Please select a day:</legend>

            @for (int i = 0; i < @Model.DaysOfWeek.Length; i++){

                <input asp-for=IsDayChosen[i]>
                <label asp-for=IsDayChosen[i]>@Model.DaysOfWeek[i]</label>
            }

            </fieldset>

        <select asp-for=MonthsChosen asp-items=Model.MonthList ></select>

        <button type="submit">Click here to submit</button>
    </form>

    <ul>@for (int i = 0; i < @Model.DaysOfWeek.Length; i++){

        if (Model.IsDayChosen[i]){

            <li>@Model.DaysOfWeek[i]</li>
        }
    }
    </ul>

    <ol>
        @for (int i = 0; i < @Model.MonthsChosen.Length; i++){
        
            <li>@Model.MonthsChosen[i]</li>
    
        }
    </ol>

</body>
</html>